@model Car

<h2>Dodaj Samochód</h2>
<hr />
<div class="row">

    <div class="col-md-4">

    </div>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Make" class="control-label"></label>
                <input asp-for="Make" class="form-control" />
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearOfProduction" class="control-label">Rok Produkcji</label>
                <input asp-for="YearOfProduction" class="form-control" />
                <span asp-validation-for="YearOfProduction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mileage" class="control-label"></label>
                <input asp-for="Mileage" class="form-control" />
                <span asp-validation-for="Mileage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Engine" class="control-label"></label>
                <input asp-for="Engine" class="form-control" />
                <span asp-validation-for="Engine" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Fuel" class="control-label">Rodzaj Paliwa</label>
                <input asp-for="Fuel" class="form-control" />
                <span asp-validation-for="Fuel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HorsePower" class="control-label"></label>
                <input asp-for="HorsePower" class="form-control" />
                <span asp-validation-for="HorsePower" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control info" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MiniPhotoUrl" class="control-label"></label>
                <input asp-for="MiniPhotoUrl" class="form-control info" />
                <span asp-validation-for="MiniPhotoUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhotoUrl1" class="control-label"></label>
                <input asp-for="PhotoUrl1" class="form-control info" />
                <span asp-validation-for="PhotoUrl1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhotoUrl2" class="control-label"></label>
                <input asp-for="PhotoUrl2" class="form-control info" />
                <span asp-validation-for="PhotoUrl2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhotoUrl3" class="control-label"></label>
                <input asp-for="PhotoUrl3" class="form-control info" />
                <span asp-validation-for="PhotoUrl3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhotoUrl4" class="control-label"></label>
                <input asp-for="PhotoUrl4" class="form-control info" />
                <span asp-validation-for="PhotoUrl4" class="text-danger"></span>
            </div>
            @*<input type="hidden" asp-for="PhotoUrl" value="@ViewBag.ImgPath" />
            <input type="hidden" asp-for="PhotoUrl" value="@ViewBag.ImgPath" />*@
            <div class="form-group">
                <input type="submit" value="Dodaj samochód" class="btn btn-success" style="margin-top:30px" />
                <a asp-action="Index" class="btn btn-danger pull-right" style="margin-top:30px">Powrót</a>
            </div>
        </div>
    </form>
</div>